{
  "name": "doc-link-checker",
  "version": "1.0.6",
  "description": "Verify that internal links in your documentation are valid.",
  "license": "GPLv3",
  "type": "module",
  "packageManager": "yarn@3.2.1",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "dependencies": {
    "github-slugger": "^1.4.0",
    "glob-reader": "^1.3.1",
    "is-text-path": "^2.0.0",
    "remark-gfm": "^3.0.1",
    "remark-parse": "^10.0.1",
    "to-vfile": "^7.2.3",
    "unified": "^10.1.2"
  },
  "devDependencies": {
    "@types/chai": "4.3.1",
    "@types/github-slugger": "1.3.0",
    "@types/mocha": "9.1.1",
    "@types/node": "16.11.39",
    "chai": "4.3.6",
    "eslint-plugin-mocha": "10.0.5",
    "mocha": "10.0.0",
    "prettier": "2.6.2",
    "remark-cli": "10.0.1",
    "ts-node": "10.8.1",
    "tsheredoc": "1.0.1",
    "typescript": "4.7.3",
    "vfile": "5.3.2",
    "xo": "0.50.0"
  },
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "build": "tsc --declaration --noEmitOnError",
    "test": "mocha",
    "lint": "xo",
    "reformat": "prettier -w src tests",
    "md-tree": "remark --tree-out"
  },
  "files": [
    "src/**/*.ts",
    "dist/**/*.js",
    "dist/**/*.d.ts",
    "dist/**/*.js.map",
    "tsconfig.json"
  ],
  "sideEffects": false,
  "homepage": "https://github.com/djmattyg007/doc-link-checker",
  "repository": {
    "type": "git",
    "url": "https://github.com/djmattyg007/doc-link-checker.git"
  },
  "keywords": [
    "link checker",
    "links",
    "linter",
    "linting",
    "markdown",
    "documentation"
  ]
}
